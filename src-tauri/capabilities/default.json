{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "notification:default",
    "notification:default",
    "websocket:default",
    "notification:default",
    "deep-link:default",
    "dialog:default",
    "fs:allow-read-dir",
    "fs:allow-stat",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-copy-file",
    "fs:allow-remove",
    "shell:allow-open",
    "fs:scope",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" }
      ]
    }
  ]
}